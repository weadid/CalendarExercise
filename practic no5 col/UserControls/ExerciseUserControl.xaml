<UserControl x:Class="practic_no5_col.UserControls.ExerciseUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:practic_no5_col.UserControls"
             mc:Ignorable="d" 
             Height="80" Width="auto">
    <StackPanel Orientation="Horizontal">
        <CheckBox VerticalContentAlignment="Center" IsChecked="{Binding Selected}"/>


        <Image Width="80" Source="{Binding ImageSource}"/>
        <Label VerticalAlignment="Center" FontSize="16" Content="{Binding Name}"/>
    </StackPanel>
</UserControl>
