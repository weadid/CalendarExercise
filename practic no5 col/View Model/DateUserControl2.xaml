<UserControl x:Class="practic_no5_col.View_Model.DateUserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:practic_no5_col.View_Model"
             mc:Ignorable="d" 
             Height="80" Width="80" Cursor="Hand" Background="#FF60C8FF" Margin="5" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="DayLabel" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <Image x:Name="DayImage" Grid.Row="1" Source="/Resoucres/Ellipsis.png" />
    </Grid>
</UserControl>
